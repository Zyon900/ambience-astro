---
// About page with project info and sound credits.
import Layout from '../layouts/Layout.astro';
import soundsData from '../data/sounds.json';

const sounds = soundsData.sounds as Array<{
	id: string;
	name: string;
	thumbnail: string;
	file: string;
	source?: string;
	license?: string;
}>;
---

<Layout title="About - Ambience">
	<div class="max-w-4xl mx-auto space-y-6 sm:space-y-8">
		<div class="text-center">
			<h1 class="text-3xl sm:text-4xl font-bold text-gray-100 mb-2">About</h1>
		</div>

		<div class="bg-gray-800 rounded-lg p-4 sm:p-6 border border-gray-700">
			<h2 class="text-xl sm:text-2xl font-semibold text-gray-100 mb-4">About This Project</h2>
			<p class="text-gray-300 leading-relaxed">
				This is a university project, created for the IOT course at KIT in WS 25/26.
			</p>
			<p class="text-gray-300 leading-relaxed mt-4">
				Ambience is a website created by Eric Oswald that allows you to mix and play ambient sounds to create your perfect
				soundscape. Whether you need to focus, relax, meditate, or just enjoy some background noise, you can combine
				multiple sounds and control their individual volumes to create the perfect mix for you.
			</p>
			<p class="text-gray-300 leading-relaxed mt-4">
				The application uses HTML5 Audio API for playback and localStorage to save your favorite sound
				combinations. All sounds are stored locally in your browser, so your preferences persist across
				sessions.
			</p>
		</div>

		<div class="bg-gray-800 rounded-lg p-4 sm:p-6 border border-gray-700">
			<h2 class="text-xl sm:text-2xl font-semibold text-gray-100 mb-4">Sound Credits & Licenses</h2>
			<p class="text-gray-400 mb-4 text-sm">
				Check below to see all sounds used in this project, with their sources and licensing information.
			</p>
			<div class="space-y-4">
				{sounds.map((sound) => (
					<div class="border-b border-gray-700 pb-4 last:border-b-0 last:pb-0">
						<h3 class="text-lg font-semibold text-gray-100 mb-2">{sound.name}</h3>
						<div class="space-y-1 text-sm">
							{sound.source && (
								<p class="text-gray-300">
									<span class="text-gray-400">Source:</span>{' '}
									<a
										href={sound.source}
										target="_blank"
										rel="noopener noreferrer"
										class="text-accent hover:underline"
									>
										{sound.source === 'https://www.ffmpeg.org/' ? 'Generated with FFmpeg' : sound.source}
									</a>
								</p>
							)}
							{sound.license && (
								<p class="text-gray-300">
									<span class="text-gray-400">License:</span> {sound.license}
								</p>
							)}
						</div>
					</div>
				))}
			</div>
		</div>
	</div>
</Layout>
